    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/design"
        android:layout_width="64dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/mYellow"
        android:clickable="false"
        app:backgroundTint="#FFF6F6"
        app:layout_constraintBottom_toBottomOf="@id/disconnect"
        app:layout_constraintLeft_toLeftOf="@id/disconnect"
        app:layout_constraintRight_toRightOf="@id/disconnect"
        app:layout_constraintTop_toTopOf="@id/disconnect" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_baseline_link_off_24"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="@id/textBox"
        app:layout_constraintBottom_toBottomOf="@id/textBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

